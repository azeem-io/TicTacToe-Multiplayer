{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["components/*"],
            "@/themes/*": ["themes/*"],
            "@/styles/*": ["styles/*"],
            "@/pages/*": ["pages/*"],
            "@/types/*": ["types/*"],
            "@/interfaces/*": ["interfaces/*"],
            "@/api/*": ["pages/api/*"],
            "@/hooks/*": ["hooks/*"],
            "@/utils/*": ["utils/*"],
            "@/plugins/*": ["plugins/*"],
            "@/public/*": ["public/*"],
            "@/data/*": ["data/*"],
            "@/utility/*": ["utility/*"],
            "@/cms/*": ["cms/*"],
            "@/config": ["config.ts"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.mts",
        "pages/api/socket.js",
        "utility/socket/messageHandler.jsx"
    ],
    "exclude": ["node_modules"],
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "files": ["declarations.d.ts"]
}
