{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        // "module": "esnext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {}
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.mts",
        // "pages/api/socket.js",
        "utility/socket/messageHandler.jsx",
        "server/src/index.ts"
    ],
    "exclude": ["node_modules"],
    "types": ["node", "jest", "@testing-library/jest-dom"]
    // "files": ["declarations.d.ts"],
}
